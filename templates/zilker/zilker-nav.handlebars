{{#navigation}}
{{#unless subtitle}}
<li><a href="{{{link}}}"><span>{{title}}</span></a></li>
{{/unless}}
{{#if subtitle}}
<li class="dropdown"><a class="dropdown-toggle" data-delay="50" data-hover="dropdown" data-toggle="dropdown" href="#"><span>{{title}} <i class="fa fa-angle-down"></i></span></a>
	<ul class="dropdown-menu" role="menu">
	{{#subtitle}}
		{{#if subtitle}}
		<li class="dropdown-submenu"><a href="{{{link}}}">{{title}} <i class="fa fa-angle-right pull-right"></i></a>
			<ul class="dropdown-menu" role="menu">
				{{#subtitle}}
				<li><a href="{{{link}}}">{{title}}</a></li>
				{{/subtitle}}
			</ul>
		</li>
		{{else}}
		<li><a href="{{{link}}}">{{title}}</a></li>
		{{/if}}
	{{/subtitle}}
	</ul>
</li>
{{/if}}
{{/navigation}}
