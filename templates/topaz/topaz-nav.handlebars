{{#navigation}}
{{#unless subtitle}}
<li><a href="{{{link}}}">{{title}}</a></li>
{{/unless}}
{{#if subtitle}}
<li class="dropdown">
  	<a href="#" class="dropdown-toggle" data-toggle="dropdown">{{title}} <i class="fa fa-angle-down"></i></a>
  	<ul class="dropdown-menu" role="menu">
      {{#subtitle}}
		{{#if subtitle}}
		<li class="dropdown-submenu"><a href="{{{link}}}">{{title}}</a>
			<ul class="dropdown-menu" role="submenu">
				{{#subtitle}}
				<li><a href="{{{link}}}">{{title}}</a></li>
				{{/subtitle}}
			</ul>
		</li>
		{{else}}
  		<li><a href="{{{link}}}">{{title}}</a></li>
		{{/if}}
      {{/subtitle}}
  	</ul>
</li>
{{/if}}
{{/navigation}}
