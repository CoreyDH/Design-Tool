{{#navigation}}
{{#unless subtitle}}
<li><a href="{{{link}}}">{{title}}</a></li>
{{/unless}}
{{#if subtitle}}
<li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">{{title}}</a>
	<ul class="dropdown-menu">
	{{#subtitle}}
		{{#if subtitle}}
		<li class="dropdown-submenu"><a href="{{{link}}}">{{title}}</a>
			<ul class="dropdown-menu">
				{{#subtitle}}
				<li><span class="list-circle"></span> <a href="{{{link}}}">{{title}}</a></li>
				{{/subtitle}}
			</ul>
		</li>
		{{else}}
		<li><span class="list-circle"></span> <a href="{{{link}}}">{{title}}</a></li>
		{{/if}}
	{{/subtitle}}
	</ul>
</li>
{{/if}}
{{/navigation}}
