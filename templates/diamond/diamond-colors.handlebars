/* 1 Typography
----------------------------------------------------------------------------- */
a, .text-default, .btn-right li > a:hover, .btn-right li > a:focus  {
	color: {{primary.hex}};
}
a:hover,
a:focus {
	color: {{primaryHover.hex}};
}
mark,
.mark {
	background-color: {{primary.hex}};
	color: #ffffff;
}
.table > thead > tr > th {
	border-bottom: 1px solid {{primary.hex}};
	background-color: {{primary.hex}};
	color: #fff;
}
.table-bordered {
	border-color: {{primary.hex}};
}

/* 2 Layout
----------------------------------------------------------------------------- */
.default-bg {
	background-color: {{primary.hex}};
	color: #ffffff;
}

/* Backgrounds
---------------------------------- */
.default-translucent-bg:after {
	background-color: {{timer.rgba}};
}

/* 3 Pages
----------------------------------------------------------------------------- */
.blogpost .post-info {
	background-color: {{primary.hex}};
	color: #fff;
}
.blogpost .side .social-links li a {
	background-color: transparent;
	border-color: transparent;
	color: {{primary.hex}};
}
.blogpost ul.links li a:hover {
	color: {{primary.hex}};
}

/* timeline layout */
.timeline-date-label {
	color: {{primary.hex}};
}
@media (min-width:768px) {
	.timeline .timeline-item:before {
		background-color: #fff;
		border: 1px solid {{primary.hex}};
	}
}

/* 4 Template Components
----------------------------------------------------------------------------- */
/* Buttons
---------------------------------- */
/* Gray Buttons */
.btn-gray:hover,
.btn-gray:focus,
.btn-gray:active,
.btn-gray.active,
.open .dropdown-toggle.btn-gray {
	color: #ffffff;
	background-color: {{primary.hex}};
	border-color: {{primary.hex}};
}

/* Light Gray Buttons */
.btn-light-gray:hover,
.btn-light-gray:focus,
.btn-light-gray:active,
.btn-light-gray.active,
.open .dropdown-toggle.btn-light-gray {
	color: #ffffff;
	background-color: {{primary.hex}};
	border-color: {{primary.hex}};
}

/* Default Buttons */
.btn-default {
	background-color: {{primary.hex}};
	color: #fff !important;
	border-color: {{primaryHover.hex}};
}
.btn-default:hover,
.btn-default:focus,
.btn-default:active,
.btn-default.active,
.open .dropdown-toggle.btn-default {
	color: #fff !important;
	background-color: {{primaryHover.hex}};
	border-color: {{primaryHover.hex}};
}
.btn-default.disabled,
.btn-default[disabled],
fieldset[disabled] .btn-default {
	background-color: {{primaryHover.hex}};
	border-color: {{primaryHover.hex}};
}

/* Button with transparent bg
---------------------------------- */
.btn-white {
	background-color: transparent;
	color: {{primaryHover.hex}};
	border: 1px solid {{primary.hex}};
}
.btn-white:hover,
.btn-white:focus,
.btn-white:active,
.btn-white.active,
.open .dropdown-toggle.btn-white {
	color: #fff;
	background-color: {{primaryHover.hex}};
	border-color: {{primaryHover.hex}};
}

/* Forms
---------------------------------- */
.default-bg .form-control {
	border-color: {{primary.hex}};
	background-color: rgba(0, 0, 0, 0.2);
	-webkit-box-shadow: inset 0 2px 3px rgba(0, 0, 0, .35);
	box-shadow: inset 0 2px 3px rgba(0, 0, 0, .35);
	color: #ffffff;
}
.default-bg .form-control:focus {
	border-color: {{primary.hex}};
	background-color: rgba(0, 0, 0, 0.25);
}
.default-bg .input-group-addon {
	background-color: {{primaryHover.hex}};
	border-color: {{primary.hex}};
	color: #fff;
}
.dropdown .active>a>.badge,
.dropdown a:hover .badge,
.dropdown .open > a > .badge {
	border-color: {{primary.hex}};
}

/* Pager
---------------------------------- */
ul.pagination li > a:hover {
	background-color: transparent;
	color: #ffffff;
	background-color: {{primary.hex}};
	border-color: {{primary.hex}};
}
ul.pagination li.active a,
.pagination > .active > a:hover,
.pagination > .active > a:focus {
	color: #ffffff;
	background-color: {{primary.hex}};
	border-color: {{primary.hex}};
}

/* Tabs
---------------------------------- */
.nav-tabs > li.active > a:after {
	background-color: {{primary.hex}};
}
.tab-content:after {
	background-color: {{primary.hex}};
}
@media (max-width:480px) {
	.nav-tabs > li > a:hover:after {
		background-color: {{primary.hex}};
	}
}

/* Horizontal tabs version 2 */
.tabs-style-2 .nav-tabs {
	border-bottom: 1px solid {{primary.hex}};
}
.tabs-style-2 .nav-tabs > li.active > a,
.tabs-style-2 .nav-tabs > li.active > a:hover,
.tabs-style-2 .nav-tabs > li.active > a:focus,
.tabs-style-2 .nav-tabs > li > a:hover {
	border: 1px solid {{primary.hex}};
	background-color: {{primary.hex}};
	color: #fff;
}

/* vertical tabs */
.vertical .nav-tabs > li > a:hover:after {
	background-color: {{primary.hex}};
}

/* Nav pills
---------------------------------- */
.nav-pills > li.active > a,
.nav-pills > li.active > a:hover,
.nav-pills > li.active > a:focus,
.nav-pills > li > a:hover,
.nav-pills > li > a:focus {
	border: 1px solid #f3f3f3;
	color: {{primary.hex}};
	background-color: #fafafa;
}
.nav-pills > li.active > a:after {
	color: {{primary.hex}};
}
.nav-pills > li.active > a:hover:after,
.nav-pills > li.active > a:focus:after,
.nav-pills > li > a:hover:after,
.nav-pills > li > a:focus:after {
	color: {{primary.hex}};
}
.light .footer-content .nav-pills > li.active > a:hover,
.light .footer-content .nav-pills > li > a:hover {
	color: {{primaryHover.hex}};
}
.nav-pills > .active > a > .badge {
	color: {{primary.hex}};
	background-color: #fff;
	border-color: {{primary.hex}};
}

/* Collapse
---------------------------------- */
.panel-heading a {
	background-color: {{primary.hex}};
	color: #ffffff;
}
.panel-heading a:hover,
.panel-transparent .panel-heading a:hover {
	background-color: {{primary.hex}};
	color: #ffffff;
}

/* Progress bars
---------------------------------- */
.progress-bar-default {
	background-color: {{primary.hex}};
}

/* Modals
---------------------------------- */
.modal-content .modal-header {
	background-color: {{primary.hex}};
}

/* Images and Images overlay
---------------------------------- */
.overlay a {
	color: {{primary.hex}};
	background-color: #ffffff;
}
.overlay-links a + a {
	color: #ffffff;
	background-color: {{primary.hex}};
}
a.overlay i {
	color: {{primary.hex}};
}

/* 5 Navigations
----------------------------------------------------------------------------- */
/* first level active menu items on hover/focus */
.navbar-default .navbar-nav > .active > a,
.navbar-default .navbar-nav > .active > a:focus {
	color: {{primary.hex}};
	background-color: transparent;
}

.main-navigation .navbar-nav > .open > a,
.main-navigation .navbar-nav > .open > a:hover,
.main-navigation .navbar-nav > .open > a:focus {
	color: #666666;
	background-color: #fafafa;
}

/* second level menu items on focus/hover and when opened */
.dropdown-menu > li > a:hover,
.dropdown-menu > li > a:focus,
.nav .open > a,
.nav .open > a:hover,
.nav .open > a:focus,
.dropdown-menu > .active > a,
.dropdown-menu > .active > a:hover,
.dropdown-menu > .active > a:focus,
.dropdown-menu .menu > .active > a,
.dropdown-menu .menu > .active > a:hover,
.dropdown-menu .menu > .active > a:focus {
	background-color: #ffffff;
	color: {{primary.hex}};
	border-color: #f1f1f1;
}
#offcanvas .nav .open > a,
#offcanvas .nav .open > a:hover,
#offcanvas .nav .open > a:focus,
#offcanvas .nav > li > a:hover,
#offcanvas .nav > li > a:focus,
#offcanvas .navbar-nav > li.active > a {
	color: {{primary.hex}};
	background-color: #ffffff;
}

/* mega menu menu items on focus/hover and when opened */
.mega-menu .menu > li > a:hover,
.mega-menu .menu > li > a:focus {
	background-color: #ffffff;
	color: {{primary.hex}};
	border-color: #f1f1f1;
}

/* arrows for parent menu items */
.navbar-default .navbar-nav > .active.dropdown > a:before {
	color: {{primary.hex}};
}
.navbar-default .navbar-nav > .dropdown.open > a:before {
	color: #e5e5e5;
}
.dropdown .dropdown.open>a:before,
.transparent.header:not(.dark) .dropdown .dropdown.open>a:before {
	color: {{primary.hex}};
}

/* mobile menu toggle button on hover/focus */
.navbar-default .navbar-toggle:hover,
.navbar-default .navbar-toggle:focus {
	background-color: #fafafa;
	border-color: {{primary.hex}};
}
.navbar-default .navbar-toggle:hover .icon-bar,
.navbar-default .navbar-toggle:focus .icon-bar {
	background-color: {{primary.hex}};
}
@media (max-width:767px) {
	.navbar-default .navbar-nav .open .dropdown-menu > .active > a,
	.navbar-default .navbar-nav .open .dropdown-menu > .active > a:hover,
	.navbar-default .navbar-nav .open .dropdown-menu > .active > a:focus {
		color: {{primary.hex}};
		background-color: transparent;
	}

	/* first level items hover and focus states */
	.navbar-default .navbar-nav > li > a:hover,
	.navbar-default .navbar-nav > li > a:focus,
	.navbar-default .navbar-nav > .active > a:hover,
	.navbar-default .navbar-nav > .active > a:focus {
		color: {{primary.hex}};
		background-color: #fff;
	}

	/* second level items on hover/focus */
	.navbar-default .navbar-nav .open .dropdown-menu > li > a:hover,
	.navbar-default .navbar-nav .open .dropdown-menu > li > a:focus {
		color: {{primary.hex}};
	}
}

/* Subfooter navigation
---------------------------------- */
.subfooter .navbar-default .nav > li > a:hover,
.subfooter .navbar-default .nav > .active > a:hover,
.subfooter .navbar-default .nav > .active > a:focus {
	background-color: transparent;
	color: {{primary.hex}};
}

/* 6 Blocks/Widgets
----------------------------------------------------------------------------- */
/* Boxes
---------------------------------- */
.box.gray-bg:hover {
	color: {{primary.hex}};
}
.box.default-bg:hover {
	background-color: #fff;
	border: 1px solid {{primary.hex}};
}
.box.default-bg:hover * {
	color: {{primary.hex}};
}
.box-style-1:not(.team-member):hover i {
	color: {{primary.hex}};
}
.box-style-1.default-bg:hover i,
.box-style-1.dark-bg:hover i {
	color: inherit;
}
.box-style-2:hover .default-bg {
	background-color: #fff;
	border: 1px solid {{primary.hex}};
}
.box-style-2:hover .default-bg * {
	color: {{primary.hex}};
}
.box-style-2:hover .white-bg * {
	color: {{primary.hex}};
}
.box-style-3:hover .default-bg {
	background-color: #fff;
	border: 1px solid {{primary.hex}};
}
.box-style-3:hover .default-bg * {
	color: {{primary.hex}};
}
.box-style-3:hover .white-bg * {
	color: {{primary.hex}};
}

/* Tags cloud block
---------------------------------- */
.tag a:hover {
	color: #ffffff;
	background-color: {{primary.hex}};
	border-color: {{primary.hex}};
}

/* Social icons block
---------------------------------- */
.social-links li a {
	background: {{primary.hex}};
	border: 1px solid {{primary.hex}};
	color: #fff;
}
.social-links li a:hover {
	background-color: transparent;
	border-color: {{primaryHover.hex}};
	color: {{primaryHover.hex}};
}
.social-links .dropdown.open>button>i:before {
	content: "\f00d";
	color: {{primary.hex}};
}
.header-top .social-links li a:hover {
	color: {{primaryHover.hex}};
}

/* search and login
---------------------------------- */
.header-top-dropdown .dropdown.open>button,
.header-top-dropdown .dropdown>button:hover {

	color: {{primary.hex}};
}

/* Pricing tables
---------------------------------- */
.plan .popover-title {
	background-color: {{primary.hex}};
	color: #ffffff;
}
.gray .plan .header h3 {
	color: {{primary.hex}};
}
.white .plan .header {
	color: #fff;
	background: {{primary.hex}};
}
.stripped .header {
	background: {{primary.hex}};
	-webkit-box-shadow: 0px 0px 60px {{primaryHover.hex}} inset;
	-moz-box-shadow: 0px 0px 60px {{primaryHover.hex}} inset;
	box-shadow: 0px 0px 60px {{primaryHover.hex}} inset;
	color: #fff;
}

/* 7 Main Slideshow
----------------------------------------------------------------------------- */

.banner {
	background-color: {{primaryHover.hex}};
	border-bottom: 1px solid #eaeaea;
}

/* Slider Revolution captions */

.default_bg {
	background-color: {{primary.hex}};
	color: #fff;
}

/* Revolution Nav Controls */
.tparrows.round:hover {
	color: #ffffff;
	background-color: {{primary.hex}};
}
.tp-bullets.simplebullets.round .bullet:hover,
.tp-bullets.simplebullets.round .bullet.selected {
	background-color: {{primary.hex}};
}
.tp-bannertimer {
	background-color: {{timer.rgba}};
}

/* 8 Owl carousel
----------------------------------------------------------------------------- */
.owl-prev {
	background-color: {{primary.hex}};
	color: #f1f1f1;
}
.owl-next {
	background-color: #f1f1f1;
	color: {{primary.hex}};
}
.content-slider-with-controls .owl-buttons div,
.content-slider-with-controls-autoplay .owl-buttons div {
	background-color: {{primary.hex}};
	color: #f1f1f1;
}
.content-slider-with-controls .owl-prev:hover,
.content-slider-with-controls .owl-next:hover,
.content-slider-with-controls-autoplay .owl-prev:hover,
.content-slider-with-controls-autoplay .owl-next:hover {
	background-color: #f1f1f1;
	color: {{primary.hex}};
}
.owl-controls .owl-page.active span,
.owl-controls.clickable .owl-page:hover span {
	background: {{primary.hex}};
}
input[type="submit"] {
	background-color:{{primary.hex}};
	border-color:{{primaryHover.hex}};
	color:#fff;
}
input[type="submit"]:focus {
	background-color:{{primaryHover.hex}};
	border-color:{{primaryHover.hex}};
}
